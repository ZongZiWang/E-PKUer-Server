<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @restaurant.name %>
</p>

<p>
  <b>Image:</b>
  <%= image_tag(@restaurant.image_url) %>
</p>

<p>
  <b>Busy:</b>
  <% if @restaurant.busy == 0 %>繁忙<% end %><% if @restaurant.busy == 1 %>还行<% end %><% if @restaurant.busy == 2 %>宽松<% end %>
</p>

<p>
  <b>Recommendations:</b>
  <% @restaurant.recommendations.each do |dish| %>
	  <%= link_to dish[:name], restaurant_dish_path(@restaurant, dish[:id]) %>
  <% end %>
</p>

<p>
  <b>Evaluation:</b>
  <%= @restaurant.evaluation %>
</p>

<p>
  <b>Location name:</b>
  <%= @restaurant.location_name %>
</p>

<p>
  <b>Location zone:</b>
  <%= @restaurant.location_zone %>
</p>

<p>
  <b>Location latitude:</b>
  <%= @restaurant.location_latitude %>
</p>

<p>
  <b>Location longitude:</b>
  <%= @restaurant.location_longitude %>
</p>

<p>
  <b>Info time:</b>
  <%= @restaurant.info_time %>
</p>

<p>
  <b>Info tel:</b>
  <%= @restaurant.info_tel %>
</p>

<p>
  <b>Info summary:</b>
  <%= @restaurant.info_summary %>
</p>

<p>
  <b>Average cost:</b>
  <%= @restaurant.average_cost %>
</p>

<p>
  <b>Category:</b>
  <%= @restaurant.category %>
</p>

<p>
  <b>Description:</b>
  <%= @restaurant.description %>
</p>

<p>
  <b><%= link_to 'Dishes:', restaurant_dishes_path(@restaurant) %></b>
  <% @restaurant.dishes.each do |dish| %>
	  <%= link_to dish.name, restaurant_dish_path(@restaurant, dish) %>
  <% end %>
</p>

<p>
  <b><%= link_to 'Comments:', restaurant_comments_path(@restaurant) %></b>
  <% @restaurant.restaurant_comments.each do |comment| %>
	  <%= link_to comment.content, restaurant_comment_path(@restaurant, comment) %>
  <% end %>
</p>


