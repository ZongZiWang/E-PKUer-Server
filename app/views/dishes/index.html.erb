<h1>Listing dishes</h1>

<table>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Image</th>
    <th>Evaluation</th>
    <th>Cost</th>
    <th>Category</th>
    <th>Description</th>
	<th>Restaurant</th>
	<th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dishes.each do |dish| %>
  <tr>
    <td><%= dish.id %></td>
    <td><%= dish.name %></td>
    <td><%= image_tag(dish.image_url) %></td>
    <td><%= dish.evaluation %></td>
    <td><%= dish.cost %></td>
    <td><%= dish.category %></td>
    <td><%= dish.description %></td>
	<td><% if dish.restaurant %><%= link_to dish.restaurant.name, dish.restaurant %><% end %></td>
	<td><% dish.dish_comments.each do |comment| %>
			<%= link_to comment.content, comment %>
		<% end %>
	</td>
    <td><%= link_to 'Show', dish %></td>
    <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
    <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

