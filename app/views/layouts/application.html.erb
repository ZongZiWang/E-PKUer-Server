<!DOCTYPE html>
<html>
<head>
  <title>Epkuer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="navigation-bar">
		<% if session[:user_id] %>
			<span id="user-name">
				<%= User.find(session[:user_id]).name %>
			</span>
			<span id="user-logout">
				<%= link_to "logout", users_logout_url, :method => :delete %>
			</span>
		<% end %>
	</div>

<%= yield %>

</body>
</html>
